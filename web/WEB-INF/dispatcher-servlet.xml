<?xml version='1.0' encoding='UTF-8' ?>
<!-- was: <?xml version="1.0" encoding="UTF-8"?> -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
http://www.springframework.org/schema/mvc
http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd"
       xmlns:context="http://www.springframework.org/schema/context" xmlns:mvc="http://www.springframework.org/schema/mvc">

    <bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping"/>
    <!--注册一个数据库连接池bean-->
    <bean name="dbcpBean" class="com.teamnx.db.DbcpBean"/>

    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="te_studentlist.htm">te_studentListController</prop>
                <prop key="stu_index.htm">stu_indexController</prop>
                <prop key="te_index.htm">te_indexController</prop>
                <prop key="usercenter.htm">userCenterController</prop>
                <prop key="login.htm">loginController</prop>
                <prop key="te_homework.htm">te_homeworkController</prop>

            </props>
        </property>
    </bean>

    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver"
          p:prefix="/WEB-INF/jsp/"
          p:suffix=".jsp" />

    <bean name="stu_indexController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="stu_index" />
 

    <bean id = "multipartResolver"
          class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="uploadTempDir" value="/tmp"/>
        <property name="maxUploadSize" value="2048576"/>
        <property name="maxInMemorySize" value="524288"/>
    </bean>
    <!--注册一个登录控制器-->
    <bean id="loginController" class="com.teamnx.controller.LoginController">
        <property name="udi" ref="userDaoImpl"/>
    </bean>
    <!--注册一个user的数据库操作类-->
    <bean id="userDaoImpl" class="com.teamnx.model.UserDaoImpl">
        <property name="dbcpBean" ref="dbcpBean"/>
    </bean>
    <context:component-scan base-package="com.teamnx.controller"/>
    <context:annotation-config/>
    <mvc:annotation-driven/>

    
    <!--    测试用-->
    <bean name="userCenterController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="usercenter" />
    <bean name="te_indexController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="te_index" />
     <bean name="te_studentListController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="te_studentlist" />
      <bean name="te_homeworkController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="te_homework" />
</beans>
